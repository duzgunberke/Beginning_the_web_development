@model Mvc50Begin.Models.Entity.TBL_MUSTERILER
@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>YeniMüşteri</h2>
<form class="form form-group" method="post">
    <div>
        <label>Müşteri Ad</label>
        @Html.TextBoxFor(m=>m.MUSTERIAD,new { @class="form-control"})
        @Html.ValidationMessageFor(m=>m.MUSTERIAD,"",new { @style="color:blue"})
    </div>
    <div>
        <label>Müşteri Soyad</label>
        <input type="text" class="form-control" name="MUSTERISOYAD" placeholder="Müşteri Soyad..." />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="btn1">Müşteri Ekle</button>
    </div>
    <script>
        $("#btn1").click(function () {
            alert("Müşteri Ekleme İşlemi Yapıldı");
        });
    </script>
</form>



