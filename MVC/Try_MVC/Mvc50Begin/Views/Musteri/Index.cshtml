@using Mvc50Begin.Models.Entity
@model List<TBL_MUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı : @Html.TextBox("p");
        <input type="submit" value="Ara..." />
    </p>
}
<h2>Müşteriler</h2>
<table class="table table-bordered">
    <tr>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyad</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>ALERT</th>
    </tr>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.MUSTERIID</td>
                <td>@x.MUSTERIAD</td>
                <td>@x.MUSTERISOYAD</td>
                <td><a href="/Musteri/Sil/@x.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/MusteriGetir/@x.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "Sil", new { id = x.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyor musunuz ??')" })</td>
            </tr>

            }
    </tbody>
</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">MÜŞTERİ EKLE</a>


